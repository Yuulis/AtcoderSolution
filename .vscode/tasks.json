{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "c++ build for AtCoder",
            "type": "shell",
            "options": {
                "cwd": "${fileDirname}"
            },
            "command": "g++",
            "args": [
                "-std=c++23",
                "-I",
                "${workspaceFolder}/ac-library/",
                "-g",
                "-O0",
                "-Wall",
                "-Wextra",
                "${file}",
                "-o",
                "${workspaceFolder}/a.out"
            ],
            "group": "build"
        },
        {
            "label": "local-test run for AHC",
            "type": "shell",
            "options": {
                "cwd": "${fileDirname}"
            },
            "command": "python3",
            "args": [
                "${workspaceFolder}/localtest.py"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": "c++ build for AtCoder"
        }
    ]
}